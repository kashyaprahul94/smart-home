{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": false,
    "typeRoots" : [ "./node_modules/@types" ],
    "watch": true,
    "lib": [ "es2015", "es2016", "es2017", "dom" ],
    "outDir": "./build",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "*.ts",
    "src/*.ts",
    "src/**/*.ts"
  ]
}